{
  "scripts": {
    "run:js": "node ./dist/app.js",
    "run:ts": "ts-node ./src/app.ts",
    "dev": "nodemon",
    "build": "tsc && cp -r src/data dist/prisma && cp -r src/* dist",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "generate": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.16.1",
    "nodemon": "^2.0.22",
    "prettier": "3.0.3",
    "prisma": "^5.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "./src/data/prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node ./src/app.ts"
  },
  "engines": {
    "node": "18.x"
  }
}
